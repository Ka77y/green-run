{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "buildOptions": {
    "build": true
  },
  "include": [
    "src/**/*.ts",
    "./package.json",
    "./package-lock.json",
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules/typeorm/*"
  ]
}
